<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".main.firstPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:background="@drawable/noraml_bg"
                android:id="@+id/dash"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:gravity="center"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:textColor="#ffffff"
                    android:textSize="35dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="Papa News Admin"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="43dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@+id/dash"
                android:layout_width="wrap_content"
                android:background="@drawable/cat_bg"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/upload"
                    />

                <Button
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Upload News"
                    android:textSize="25dp"
                    android:textColor="#423838"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/database"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/cat_bg"
                android:orientation="vertical"
                android:layout_below="@+id/upload"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/update"
                    />

                <Button
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="DATABASE"
                    android:textSize="25dp"
                    android:textColor="#423838"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/userNews"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:background="@drawable/cat_bg"
                android:layout_width="wrap_content"
                android:layout_below="@+id/database"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/usercontent"
                    />

                <Button
                    android:background="#00FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="user Contents"
                    android:textSize="25dp"
                    android:textColor="#423838"
                    />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>









</RelativeLayout>